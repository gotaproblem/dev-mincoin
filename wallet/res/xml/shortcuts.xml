<shortcuts xmlns:android="http://schemas.android.com/apk/res/android" >

    <shortcut
        android:icon="@drawable/shortcut_scan_qr"
        android:shortcutId="scan_qr"
        android:shortcutShortLabel="@string/button_scan" >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="de.schildbach.wallet.ui.SendCoinsQrActivity"
            android:targetPackage="de.schildbach.wallet_test" />
    </shortcut>

    <Button
        android:id="@+id/send_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send_coins"
        android:onClick="de.schildbach.wallet.ui.send.SendCoinsActivity" >
    </Button>

    <shortcut

        android:shortcutId="request_coins"
        android:shortcutShortLabel="@string/button_request_coins" >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="de.schildbach.wallet.ui.RequestCoinsActivity"
            android:targetPackage="de.schildbach.wallet_test" />
    </shortcut>

</shortcuts>
